{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": ["@patternfly/*"],
      "enabled": false
    },
    {
      "datasources": ["npm"],
      "packagePatterns": ["@patternfly/*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "patternfly",
      "followTag": "latest"
    }
  ]
}
